    <script>
        // ============================================
        // ===== 1. CONFIGURACI√ìN Y VARIABLES =====
        // ============================================
        
        // üîë CLAVE DE EDITOR (C√ÅMBIALA)
        const CLAVE_EDITOR = "yate-1975";
        
        // L√≠mite mensual
        const MAX_ENTRADAS_POR_MES = 10;
        
        // Variable global con todas las entradas
        let todasLasEntradas = [];
        
        // Variables de estado
        let editorActivo = false;
        let filtroActivo = "todas";
        let entradaEnEdicion = null;
        let imagenActual = null; // Para la imagen que se est√° subiendo
        
        // ============================================
        // ===== 2. FUNCIONES DE DATOS =====
        // ============================================
        
        // Cargar entradas al iniciar
        function cargarEntradas() {
            const guardadas = localStorage.getItem('observatorio');
            
            if (guardadas) {
                todasLasEntradas = JSON.parse(guardadas);
            } else {
                // Datos de ejemplo
                todasLasEntradas = [
                    {
                        id: Date.now() - 86400000,
                        titulo: "Primer avistamiento del mes",
                        tag: "observatorio",
                        contenido: "Hoy comienza el observatorio. Registro todo lo que veo en el universo digital.",
                        imagen: null,
                        fecha: formatearFecha(new Date(Date.now() - 86400000)),
                        timestamp: Date.now() - 86400000
                    }
                ];
                guardarEntradas();
            }
            
            ordenarEntradas();
            actualizarContadorMes();
            mostrarEntradas(todasLasEntradas);
        }
        
        // Guardar en localStorage
        function guardarEntradas() {
            localStorage.setItem('observatorio', JSON.stringify(todasLasEntradas));
            actualizarContadorMes();
        }
        
        // Ordenar por fecha (m√°s reciente primero)
        function ordenarEntradas() {
            todasLasEntradas.sort((a, b) => b.timestamp - a.timestamp);
        }
        
        // Formatear fecha
        function formatearFecha(fecha) {
            const dia = fecha.getDate().toString().padStart(2, '0');
            const mes = (fecha.getMonth() + 1).toString().padStart(2, '0');
            const a√±o = fecha.getFullYear();
            const horas = fecha.getHours().toString().padStart(2, '0');
            const minutos = fecha.getMinutes().toString().padStart(2, '0');
            return `${dia}/${mes}/${a√±o} ${horas}:${minutos}`;
        }
        
        // ============================================
        // ===== 3. FUNCIONES DEL EDITOR =====
        // ============================================
        
        function mostrarEditor() {
            const clave = prompt("üîë Ingresa la clave de editor:");
            
            if (clave === CLAVE_EDITOR) {
                editorActivo = true;
                document.getElementById('panelEditor').style.display = 'block';
                document.getElementById('btnMostrarEditor').style.display = 'none';
                document.getElementById('editId').value = "";
                document.getElementById('editTitulo').value = "";
                document.getElementById('editTag').value = "hadas";
                document.getElementById('editContenido').value = "";
                quitarImagen();
                
                // Actualizar vista para mostrar botones de edici√≥n
                if (filtroActivo === "todas") {
                    mostrarEntradas(todasLasEntradas);
                } else {
                    filtrarPorTag(filtroActivo);
                }
            } else if (clave !== null) {
                alert("‚ùå Clave incorrecta");
            }
        }
        
        function ocultarEditor() {
            editorActivo = false;
            document.getElementById('panelEditor').style.display = 'none';
            document.getElementById('btnMostrarEditor').style.display = 'inline-block';
            entradaEnEdicion = null;
            quitarImagen();
            
            // Actualizar vista
            if (filtroActivo === "todas") {
                mostrarEntradas(todasLasEntradas);
            } else {
                filtrarPorTag(filtroActivo);
            }
        }
        
        function cancelarEdicion() {
            entradaEnEdicion = null;
            document.getElementById('editId').value = "";
            document.getElementById('editTitulo').value = "";
            document.getElementById('editTag').value = "hadas";
            document.getElementById('editContenido').value = "";
            quitarImagen();
            ocultarEditor();
        }
        
        // ============================================
        // ===== 4. FUNCIONES DE IMAGEN =====
        // ============================================
        
        function previsualizarImagen(input) {
            if (input.files && input.files[0]) {
                const archivo = input.files[0];
                
                // Verificar tama√±o (m√°ximo 500KB)
                if (archivo.size > 500 * 1024) {
                    alert("‚ö†Ô∏è La imagen es muy grande. M√°ximo 500KB. Comp√≠mela o elija otra.");
                    input.value = '';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Comprimir imagen
                    comprimirImagen(e.target.result, 0.7, 800).then(imagenComprimida => {
                        imagenActual = {
                            nombre: archivo.name,
                            datos: imagenComprimida,
                            tama√±o: archivo.size
                        };
                        
                        document.getElementById('imgPreview').src = imagenComprimida;
                        document.getElementById('vistaPrevia').style.display = 'block';
                    });
                };
                reader.readAsDataURL(archivo);
            }
        }
        
        function comprimirImagen(base64, calidad = 0.7, maxAncho = 800) {
            return new Promise((resolve) => {
                const img = new Image();
                img.src = base64;
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    let ancho = img.width;
                    let alto = img.height;
                    
                    if (ancho > maxAncho) {
                        alto = (maxAncho * alto) / ancho;
                        ancho = maxAncho;
                    }
                    
                    canvas.width = ancho;
                    canvas.height = alto;
                    
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, ancho, alto);
                    
                    const nuevaBase64 = canvas.toDataURL('image/jpeg', calidad);
                    resolve(nuevaBase64);
                };
            });
        }
        
        function quitarImagen() {
            imagenActual = null;
            document.getElementById('vistaPrevia').style.display = 'none';
            document.getElementById('imagenEntrada').value = '';
        }
        
        // ============================================
        // ===== 5. GUARDAR Y EDITAR ENTRADAS =====
        // ============================================
        
        function guardarEntrada() {
            const id = document.getElementById('editId').value;
            const titulo = document.getElementById('editTitulo').value.trim();
            const tag = document.getElementById('editTag').value;
            const contenido = document.getElementById('editContenido').value.trim();
            
            if (!titulo || !contenido) {
                alert("‚ö†Ô∏è El t√≠tulo y el contenido son obligatorios");
                return;
            }
            
            // Verificar l√≠mite mensual solo para entradas nuevas
            if (!id && todasLasEntradas.length >= MAX_ENTRADAS_POR_MES) {
                alert(`‚ö†Ô∏è Has alcanzado el l√≠mite de ${MAX_ENTRADAS_POR_MES} entradas por mes. Usa "NUEVO MES" para empezar de nuevo.`);
                return;
            }
            
            const ahora = new Date();
            
            if (id) {
                // EDITAR entrada existente
                for (let i = 0; i < todasLasEntradas.length; i++) {
                    if (todasLasEntradas[i].id == id) {
                        todasLasEntradas[i].titulo = titulo;
                        todasLasEntradas[i].tag = tag;
                        todasLasEntradas[i].contenido = contenido;
                        
                        // Actualizar imagen solo si se subi√≥ una nueva
                        if (imagenActual) {
                            todasLasEntradas[i].imagen = imagenActual;
                        }
                        break;
                    }
                }
                alert("‚úÖ Entrada actualizada");
            } else {
                // NUEVA entrada
                const nuevaEntrada = {
                    id: Date.now(),
                    titulo: titulo,
                    tag: tag,
                    contenido: contenido,
                    imagen: imagenActual, // Puede ser null
                    fecha: formatearFecha(ahora),
                    timestamp: ahora.getTime()
                };
                
                todasLasEntradas.unshift(nuevaEntrada);
                alert("‚úÖ Entrada guardada");
            }
            
            ordenarEntradas();
            guardarEntradas();
            
            // Actualizar vista
            if (filtroActivo === "todas") {
                mostrarEntradas(todasLasEntradas);
            } else {
                filtrarPorTag(filtroActivo);
            }
            
            cancelarEdicion();
        }
        
        function editarEntrada(id) {
            if (!editorActivo) return;
            
            const entrada = todasLasEntradas.find(e => e.id == id);
            if (!entrada) return;
            
            entradaEnEdicion = entrada;
            document.getElementById('editId').value = entrada.id;
            document.getElementById('editTitulo').value = entrada.titulo;
            document.getElementById('editTag').value = entrada.tag;
            document.getElementById('editContenido').value = entrada.contenido;
            
            // Si tiene imagen, cargarla en preview
            if (entrada.imagen) {
                imagenActual = entrada.imagen;
                document.getElementById('imgPreview').src = entrada.imagen.datos;
                document.getElementById('vistaPrevia').style.display = 'block';
            } else {
                quitarImagen();
            }
            
            document.getElementById('panelEditor').style.display = 'block';
            document.getElementById('btnMostrarEditor').style.display = 'none';
        }
        
        function eliminarEntrada(id) {
            if (!editorActivo) return;
            
            if (confirm("‚ö†Ô∏è ¬øEliminar esta entrada?")) {
                todasLasEntradas = todasLasEntradas.filter(e => e.id != id);
                guardarEntradas();
                
                if (filtroActivo === "todas") {
                    mostrarEntradas(todasLasEntradas);
                } else {
                    filtrarPorTag(filtroActivo);
                }
            }
        }
        
        // ============================================
        // ===== 6. MOSTRAR ENTRADAS =====
        // ============================================
        
        function mostrarEntradas(lista) {
            const contenedor = document.getElementById('contenedorEntradas');
            
            if (lista.length === 0) {
                contenedor.innerHTML = '<p style="color: var(--neon-blue); text-align: center; padding: 40px;">üî≠ No hay registros en el observatorio</p>';
                return;
            }
            
            let html = '';
            
            for (let i = 0; i < lista.length; i++) {
                const e = lista[i];
                
                // Color seg√∫n tag
                let colorTag = getColorPorTag(e.tag);
                
                html += `
                    <div class="entrada" style="border-left-color: ${colorTag};">
                        <div class="entrada-header">
                            <span class="entrada-titulo">üìå ${e.titulo}</span>
                            <span class="entrada-fecha">${e.fecha}</span>
                        </div>
                        
                        <div class="entrada-tags">
                            <span class="tag tag-${e.tag}">#${e.tag}</span>
                        </div>
                `;
                
                // IMAGEN (si existe)
                if (e.imagen) {
                    html += `
                        <div class="entrada-imagen">
                            <img src="${e.imagen.datos}" 
                                 onclick="verImagenGrande('${e.imagen.datos}')"
                                 title="Click para ver m√°s grande">
                        </div>
                    `;
                }
                
                html += `
                        <div class="entrada-contenido">
                            ${e.contenido.replace(/\n/g, '<br>')}
                        </div>
                `;
                
                // Botones de edici√≥n (solo si editor activo)
                if (editorActivo) {
                    html += `
                        <div class="entrada-acciones">
                            <button onclick="editarEntrada('${e.id}')" class="btn-secondary" style="padding: 5px 10px;">‚úèÔ∏è EDITAR</button>
                            <button onclick="eliminarEntrada('${e.id}')" class="btn-danger" style="padding: 5px 10px;">üóëÔ∏è ELIMINAR</button>
                        </div>
                    `;
                }
                
                html += `</div>`;
            }
            
            contenedor.innerHTML = html;
            actualizarContadorEntradas(lista.length);
        }
        
        function getColorPorTag(tag) {
            const colores = {
                hadas: '#ff88ff',
                ias: '#88ff88',
                pensamientos: '#ffaa00',
                eventos: '#00aaff',
                observatorio: '#ff66aa'
            };
            return colores[tag] || 'var(--neon-green)';
        }
        
        function verImagenGrande(datosImagen) {
            const modal = document.createElement('div');
            modal.className = 'modal';
            modal.innerHTML = `<img src="${datosImagen}">`;
            modal.onclick = () => document.body.removeChild(modal);
            document.body.appendChild(modal);
        }
        
        // ============================================
        // ===== 7. FILTROS =====
        // ============================================
        
        function filtrarPorTag(tag) {
            filtroActivo = tag;
            
            // Actualizar clase activa de botones
            document.querySelectorAll('.filtro-btn').forEach(btn => {
                btn.classList.remove('activo');
            });
            
            if (tag !== "todas") {
                document.getElementById(`filtro-${tag}`).classList.add('activo');
            } else {
                document.getElementById('filtro-todas').classList.add('activo');
            }
            
            if (tag === "todas") {
                mostrarEntradas(todasLasEntradas);
            } else {
                const filtradas = todasLasEntradas.filter(e => e.tag === tag);
                mostrarEntradas(filtradas);
            }
        }
        
        // ============================================
        // ===== 8. FUNCIONES DEL MES =====
        // ============================================
        
        function actualizarContadorMes() {
            const total = todasLasEntradas.length;
            const restantes = MAX_ENTRADAS_POR_MES - total;
            
            let mensaje = `üìä Este mes: ${total}/${MAX_ENTRADAS_POR_MES} entradas`;
            
            if (restantes > 0) {
                mensaje += ` ¬∑ Te quedan ${restantes} entradas`;
            } else {
                mensaje += ` ¬∑ ¬°L√≠mite alcanzado!`;
            }
            
            document.getElementById('contadorMes').innerHTML = mensaje;
            actualizarContadorEntradas(total);
        }
        
        function actualizarContadorEntradas(total) {
            document.getElementById('contadorEntradas').innerHTML = `(${total}/${MAX_ENTRADAS_POR_MES})`;
        }
        
        function nuevoMes() {
            if (!editorActivo) {
                alert("üîí Debes estar en modo editor para usar esta funci√≥n");
                return;
            }
            
            const confirmacion1 = confirm("‚ö†Ô∏è ¬øNUEVO MES? Esto borrar√° TODAS las entradas actuales.");
            
            if (confirmacion1) {
                const confirmacion2 = prompt("Escribe 'BORRAR OBSERVATORIO' para confirmar:");
                
                if (confirmacion2 === "BORRAR OBSERVATORIO") {
                    todasLasEntradas = [];
                    guardarEntradas();
                    mostrarEntradas([]);
                    ocultarEditor();
                    alert("‚úÖ Observatorio listo para el nuevo mes");
                } else {
                    alert("‚ùå Confirmaci√≥n incorrecta. No se borr√≥ nada.");
                }
            }
        }
        
        // ============================================
        // ===== 9. INICIALIZACI√ìN =====
        // ============================================
        
        cargarEntradas();
        
        console.log('%cüî≠ Observatorio iniciado', 'color: #ff00ff; font-size: 16px;');
        console.log('%c> 10 entradas por mes ¬∑ 1 imagen por entrada', 'color: #00aaff;');
    </script>
</body>
</html>